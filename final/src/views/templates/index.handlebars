{{#if loggedIn}}
<p>Bienvenido {{email}}<p>
<p>Eres un {{rol}}<p>
<button onclick="logout()">Logout</button>
{{/if}}

<h1>Productos</h1>

{{#if mostrarProductos}}
{{#each productos}}
<div>
    <p>Titulo: <a href="/product/{{this._id}}">{{this.title}}</a></p>
    <p>Descripcion: {{this.description}}</p>
    <p>Precio: {{this.price}}</p>
    <p>Stock: {{this.stock}}</p>
    <img src="{{this.img}}" alt="Imagen de {{this.title}}">
</div>
{{/each}}
{{else}}
<p>No se pueden mostrar los productos</p>
{{/if}}